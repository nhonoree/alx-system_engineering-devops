#!/usr/bin/env bash

# This script changes the IP addresses that localhost and facebook.com resolve to

# Backup /etc/hosts before modifying it (optional but recommended)
sudo cp /etc/hosts /etc/hosts.bak

# Update localhost to resolve to 127.0.0.2
sudo sed 's/127.0.0.1/127.0.0.2/' /etc/hosts | sudo tee /etc/hosts > /dev/null

# Update facebook.com to resolve to 8.8.8.8
sudo sed '/facebook.com/c\8.8.8.8 facebook.com' /etc/hosts | sudo tee /etc/hosts > /dev/null
